@model DigitalLib.Models.Aluguel

@{
    ViewData["Title"] = "Detalhes";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Detalhes</h1>

<div>
    <h4>Informações abaixo</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Título do livro
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Livro.Titulo)
        </dd>
        <dt class = "col-sm-2">
            Nome do cliente
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Cliente.Nome)
        </dd>
        <dt class = "col-sm-2">
            Data de empréstimo
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DataEmprestimo)
        </dd>
        <dt class = "col-sm-2">
            Data de devolução
        </dt>
        @if (Model.DataDevolucao != null)
        {
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.DataDevolucao)
            </dd>
        }
        else
        {
            <dd class="col-sm-10">
                Ainda não devolvido
            </dd>
        }
        <dt class="col-sm-2">
            Preço
        </dt>
        <dd class="col-sm-10">
            R$ @Html.DisplayFor(model => model.Livro.Preco)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-primary">Editar</a> |
    <a asp-action="Index">Voltar para a lista</a>
</div>
