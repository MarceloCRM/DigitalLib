@model DigitalLib.Models.Aluguel

@{
    ViewData["Title"] = "Criar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Novo aluguel</h1>

<h4>Insira as informações abaixo</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="LivroId" class="control-label">Título do livro</label>
                <select asp-for="LivroId" class="form-control" asp-items="ViewBag.LivroId">
                    <option>Selecione o livro</option>
                </select>
            </div>
            <div class="form-group">
                <label asp-for="ClienteId" class="control-label">Nome do cliente</label>
                <select asp-for="ClienteId" class="form-control" asp-items="ViewBag.ClienteId">
                    <option>Selecione o cliente</option>
                </select>
            </div>
            <div class="form-group">
                <label asp-for="DataEmprestimo" class="control-label">Data empréstimo</label>
                <input asp-for="DataEmprestimo" class="form-control"/>
                <span asp-validation-for="DataEmprestimo" class="text-danger"></span>
            </div>
            <div class="form-group" style="margin-bottom:10px;">
                <label asp-for="DataDevolucao" class="control-label">Data devolução</label>
                <input asp-for="DataDevolucao" class="form-control" />
                <span asp-validation-for="DataDevolucao" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Criar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Voltar para a lista</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}